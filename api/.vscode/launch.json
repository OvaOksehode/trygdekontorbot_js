{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Flask App",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "cwd": "${workspaceFolder}/api",          // important!
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development",
        "PYTHONPATH": "${workspaceFolder}/api"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--port=5001"
      ],
      "jinja": true,
      "justMyCode": true,
      "python": "${workspaceFolder}/api/.venv/Scripts/python.exe"
    }
  ]
}
