{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch bot", // appears in the dropdown
      "type": "node", // Node.js debugger
      "request": "launch", // launch a new process
      "program": "${workspaceFolder}/bot/index.js", // entrypoint file
      "cwd": "${workspaceFolder}", // working directory
      "console": "integratedTerminal", // run in VS Code's terminal
      "envFile": "${workspaceFolder}/bot/.env", // <--- points to your .env file,
      "skipFiles": [
        "<node_internals>/**" // skip Node internals while debugging
      ]
    },
    {
      "name": "Run backend API",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/api",
        "FLASK_APP": "api/app.py",
        "FLASK_DEBUG": "1"
      },
      "args": ["run", "--no-debugger", "--no-reload", "--port=5001"],
      "jinja": true,
      "autoStartBrowser": false
    },
    {
      "name": "Test backend API",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-s", "-vv", "api"],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
